<script>
    $(document).on("change", "[name='size']", function () {
        // Remove the "active" class from all labels
        $("[name='size']").parent().removeClass("active");

        // Add the "active" class to the selected label
        $(this).parent().addClass("active");

        // Get the selected size value
        var selectedSize = $(this).val();
        console.log("Selected size:", selectedSize);
    });
    function onColorChange() {
        var selectedColorId = document.getElementById("colorSelect").value;
        console.log(selectedColorId);
        var productId = @Model.Id;

        // Make an AJAX request to retrieve sizes by color ID
        $.ajax({
            url: `https://localhost:7115/api/Inventory/GetSizesByColorId/${productId}/sizes?colorId=${selectedColorId}`,
            type: "GET",
            success: function (data) {
                // Update the size list with the retrieved sizes
                var sizeList = document.getElementById("sizeList");
                sizeList.innerHTML = "";

                if (data && data.length > 0) {
                    data.forEach(function (size) {
                        var label = document.createElement("label");
                        label.setAttribute("for", size.sizeName);
                        label.innerHTML = `
                                    ${size.sizeName}
                                    <input type="radio" id="${size.sizeName}" name="size" value="${size.sizeId}">
                                `;



                        sizeList.appendChild(label);

                        console.log(data);
                    });
                } else {
                    var label = document.createElement("label");
                    label.innerHTML = "No sizes available";
                    sizeList.appendChild(label);
                }

            },
            error: function (error) {
                console.log(error);
            }
        });
    }

    
        function addToCart() {
            // Get the selected color and size
            var selectedColorId = document.getElementById("colorSelect").value;
            var selectedColorName = document.getElementById("colorSelect").options[document.getElementById("colorSelect").selectedIndex].text;
            var selectedSizeId = document.querySelector("[name='size']:checked")?.value;
            var selectedSizeName = document.querySelector("[name='size']:checked")?.getAttribute("id");
            var quantity = parseInt(document.querySelector('.pro-qty input[type="text"]').value);
            // Validate that both color and size are selected
            if (!selectedColorId || !selectedSizeId) {
                alert("Please select a size.");
                return;
            }

            // Create a cart item object with the selected color and size
            var cartItem = {
                product: @Html.Raw(Json.Serialize(Model)), // Assuming the product information is available in the Model
                colorId: selectedColorId,
                colorName: selectedColorName,
                sizeId: selectedSizeId,
                sizeName: selectedSizeName,
                quantity: quantity
            };

            // Make an AJAX request to the server to add the item to the cart
            $.ajax({
                url: '/Cart/AddToCart',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(cartItem),
                success: function () {
                updateCartCount();
                    alert("Item added to cart successfully.");
                },
                error: function (error) {
                    console.log(error);
                    alert("An error occurred while adding the item to the cart.");
                }
            });
        }

    function updateCartCount() {
        // Fetch the updated cart count from the server
        $.ajax({
            url: '/Cart/GetCartCount',
            type: 'GET',
            success: function (count) {
                // Update the cart count in the UI
                $('#cartCount').text(count);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
</script>

        crossorigin="anonymous"></script>
<script>
    const GetAccessToken = () => {
        const cookieName = "access_token"; // Replace "accessToken" with the actual name of your cookie
        const cookies = document.cookie.split("; ");
        for (const cookie of cookies) {
            const [cookieNameAndValue, ...rest] = cookie.split("=");
            if (cookieNameAndValue === cookieName) {
                return decodeURIComponent(rest.join("="));
            }
        }
        return null;
    }

    const getUser = () => {
        const token = GetAccessToken();
        if (token) {
            $.ajax({
                url: 'https://localhost:7115/api/User/GetCurrentUser',
                method: 'GET',
                contentType: 'application/json',
                headers: {
                    "Authorization": `Bearer ${token}`
                },
                success: function (response) {
                    console.log(response)
                    $("#username").text(response.name);
                },
                error: function (xhr, status, error) {
                    console.log(error);
                    window.location.href = 'https://localhost:7236/Login'
                }
            });
        } else {
            // If there is no access token, redirect to the login page
            window.location.href = 'https://localhost:7236/Login';
        }
    }

    getUser();
</script>

